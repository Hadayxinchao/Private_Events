<% if event.errors.any? %>
  <div id="error_explaination">
    <h2><%= pluralize(event.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% event.errors.full_messages do |message| %>
        <li><%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: event do |form| %>
  <%= form.label :name, "Event name:" %>
  <%= form.text_field :name %>
  <br>
  <%= form.label :location, "Event location:" %>
  <%= form.text_field :location %>
  <br>
  <%= form.label :date, "Event date:" %>
  <%= form.datetime_field :date %>
  <br>
  <%= form.label :private %>
  <%= form.check_box :private %>
  <br>
  <%= form.hidden_field :creator_id, value: current_user.id %>
  <%= form.submit %>
<% end %>